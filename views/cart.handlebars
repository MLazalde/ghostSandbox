    </table>
  </div>
  <!-- Cart Total -->
  <div class="d-flex justify-content-end">
    <h4>Total: $40.00</h4>
  </div>
  <!-- Checkout Button -->
  <div class="d-flex justify-content-end mt-3">
    <button class="btn btn-success">Proceed to Checkout</button>
