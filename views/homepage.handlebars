    style="
          border: none;
          background-color: green;
          border-radius: 7px;
          color: white;
        "
  >
    Submit
  </button>
</div>

<!-- Main Content Section -->
<div class="row content">
  <!-- Left Column: Upcoming Products -->
  <div class="col-md-3 products">
    <div class="product mb-4">Upcoming Product 1</div>
    <div class="product mb-4">Upcoming Product 2</div>
  </div>

  <!-- Middle Column: Carousels for Current and Hot Products -->
  <div class="col-md-6">
    <!-- Carousel for Current / Hot Products -->
    <div
      id="carouselExampleIndicators"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <!-- Carousel Indicators -->
      <div class="carousel-indicators" style="margin: 0rem;">
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1"
          style="background-color: green"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="1"
          aria-label="Slide 2"
          style="background-color: green"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="2"
          aria-label="Slide 3"
          style="background-color: green"
        ></button>
      </div>
      <!-- Carousel Items -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-block w-100 product">Current / Hot Product 1</div>
        </div>
        <div class="carousel-item">
          <div class="d-block w-100 product">Current / Hot Product 2</div>
        </div>
        <div class="carousel-item">
          <div class="d-block w-100 product">Current / Hot Product 3</div>
        </div>
      </div>
      <!-- Carousel Controls -->
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev"
        style="background-color: green"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next"
        style="background-color: green"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <!-- Calendar of Events Section -->
    <div class="events mt-4">
      <div class="event">Calendar of Events</div>
    </div>
  </div>

  <!-- Right Column: Miscellaneous Products -->
  <div class="col-md-3 products">
    <div class="product mb-4">Miscellaneous Product 1</div>
    <div class="product mb-4">Miscellaneous Product 2</div>
  </div>
</div>
